{
   "mcpServers": {
      "local-sse-server": {
         "url": "http://localhost:9001/sse",
         "transport": "sse",
         "description": "Local SSE Server",
         "timeout": 30,
         "verify_ssl": false,
         "headers": {
            "Accept": "text/event-stream",
            "Cache-Control": "no-cache",
            "Connection": "keep-alive"
         },
         "auth": {
            "method": "none"
         }
      },
      "stdio-server": {
         "command":"npx",
         "args":[
            "-y",
            "github:divyesh-0x01/mcp-minimal"
         ]
      }
   }
}